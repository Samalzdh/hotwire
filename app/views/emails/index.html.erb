
<div class="container mt-5">

    
  <%= button_to "recevoir un mail", emails_path, data: { turbo_frame: "new_email" }, class: "btn btn-secondary" %>
  
  <div class="row justify-content-center">

    <!-- La liste des emails -->
    <div class="col-md-6">
      <h2>Liste des emails</h2>
      <%= turbo_frame_tag "list_emails" do %>
        <table class="table">
          <thead>
            <tr>
              <th>Objet</th>
            </tr>
          </thead>
          <div>
            <% @emails.each do |email| %>
              <tr class="email-row" data-email-id="<%= email.id %>">
                <td>
                  <%= link_to email.object, email_path(email), data: { turbo_frame: "show_email" } %>
                </td>
              </tr>
            <% end %>
          </div>
        </table>
      <% end %>
      </div>
      <div class="col-md-6">
      <h2>Email sélectionné</h2>
      <div id="selected-email-content">
        <%= turbo_frame_tag "show_email" do %>
          <!-- Le contenu de l'email sélectionné -->
        <% end %>
      </div>
    </div>
  </div>
</div>